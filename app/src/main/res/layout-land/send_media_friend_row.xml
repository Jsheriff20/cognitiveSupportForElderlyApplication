<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendMediaFriendRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgFriendsImage"
        android:layout_width="123dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/lblSendMessageRelationship"
        android:layout_width="237dp"
        android:layout_height="78dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Relation"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/imgFriendsImage"
        app:layout_constraintTop_toBottomOf="@+id/lblSendMessageName" />

    <TextView
        android:id="@+id/lblSendMessageName"
        android:layout_width="235dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="29dp"
        app:layout_constraintStart_toEndOf="@+id/imgFriendsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFriendsImage" />

</androidx.constraintlayout.widget.ConstraintLayout>