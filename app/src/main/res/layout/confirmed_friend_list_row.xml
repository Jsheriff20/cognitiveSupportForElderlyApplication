<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgFriendsImage"
        android:layout_width="123dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/lblSentFriendRequestRelationship"
        android:layout_width="237dp"
        android:layout_height="73dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Relation"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/imgFriendsImage"
        app:layout_constraintTop_toBottomOf="@+id/lblReceivedFriendRequestUsername" />

    <TextView
        android:id="@+id/lblReceivedFriendRequestUsername"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="29dp"
        app:layout_constraintStart_toEndOf="@+id/imgFriendsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRemoveFriend" />

    <Button
        android:id="@+id/btnRemoveFriend"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="Remove"
        android:background="@drawable/orange_linear_gradient"
        app:layout_constraintTop_toBottomOf="@+id/imgFriendsImage"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnBlockFriend"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="Block"
        android:background="@drawable/red_linear_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnRemoveFriend"
        app:layout_constraintTop_toBottomOf="@+id/imgFriendsImage" />

</androidx.constraintlayout.widget.ConstraintLayout>