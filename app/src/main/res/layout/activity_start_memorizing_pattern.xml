<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".games.memoryGames.memorizingPatternGame.StartMemorizingPatternActivity">

<Button
    android:id="@+id/btnStartPatternGame"
    android:layout_width="0dp"
    android:layout_height="135dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="24dp"
    android:background="@drawable/btn_rectangle_grey_gradient"
    android:text="START"
    android:textSize="36sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/btnWatchPatternGameVid"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    android:text="Watch Example Video"
    android:textSize="26sp"
    android:background="@drawable/btn_rectangle_orange_gradient"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/btnBackToMemoryGames"
    app:layout_constraintTop_toTopOf="parent" />


<ImageButton
    android:id="@+id/btnBackToMemoryGames"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:background="@null"
    android:scaleType="centerCrop"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/lblPatternGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Pattern Repeat"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWatchPatternGameVid" />

    <TextView
        android:id="@+id/lblPatternGameDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="A grid will appear and a random button will change colour, it will then dissapear and another button's colour will change. You must then press the buttons in the same order as shown "
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPatternGameTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>